extends layout

block content
  .row
    .col-md-4.col-md-offset-4.mx-auto
      if error === true
        h5 Please enter valid credentials.
      form(action="." method="POST")
        .form-group.my-0
          input.form-control(
            type="text"
            id="username"
            name="username"
            placeholder="Username"
            value=''
            required
          )
        .form-group.my-0
          input.form-control(
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            value=''
            required
          )
        .form-group
          input.btn.btn-primary.btn-lg.btn-block(type="submit" value="Submit")
