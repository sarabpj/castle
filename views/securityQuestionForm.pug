extends layout

block content
  .row
    .col-md-4.col-md-offset-4.mx-auto
      if error === true
        h5 Please enter valid answer.
      h5 What is your favorite animal?
      form(id="challenge" action='/challenge' method='POST')
        .form-group.my-0
          input.form-control(
            type='password'
            id='answer'
            name='answer'
            required
          )
          input.form-control(
            type="hidden",
            name="username",
            value=username
          )
          input.form-control(
            type="hidden",
            name="user_id",
            value=user_id
          )
          input.form-control(
            type="hidden",
            name="email",
            value=email
          )
          input.btn.btn-primary.btn-lg.btn-block(type='submit' value='Submit')
      a(href='/') Back to home page
